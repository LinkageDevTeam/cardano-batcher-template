# Cardano Batcher Template - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Script address to monitor for batch requests
BATCHER_SCRIPT_ADDRESS=addr_test1qz...

# Blockfrost project ID (get one at https://blockfrost.io)
BATCHER_BLOCKFROST_PROJECT_ID=preprodXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Cardano network: mainnet, preprod, preview
BATCHER_NETWORK=preprod

# Node provider: blockfrost, ogmios
BATCHER_NODE_PROVIDER=blockfrost

# Ogmios settings (only needed if using ogmios provider)
BATCHER_OGMIOS_HOST=localhost
BATCHER_OGMIOS_PORT=1337

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================

# Path to the batcher's signing key file
BATCHER_WALLET_SIGNING_KEY_PATH=./keys/signing.skey

# Alternative: CBOR-encoded signing key (use instead of file path)
# BATCHER_WALLET_SIGNING_KEY_CBOR=58...

# =============================================================================
# BATCHING PARAMETERS
# =============================================================================

# Minimum number of requests to form a batch
BATCHER_BATCH_SIZE_MIN=2

# Maximum number of requests in a single batch
BATCHER_BATCH_SIZE_MAX=10

# Maximum time (seconds) to wait before processing a batch
BATCHER_BATCH_INTERVAL_SECONDS=30

# Matching strategy: fifo, by_type, by_value, greedy
BATCHER_STRATEGY=fifo

# =============================================================================
# DATUM CONFIGURATION
# =============================================================================

# Datum tag to filter batch requests (optional)
# BATCHER_REQUEST_DATUM_TAG=batch_request

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLAlchemy database URL for state persistence
BATCHER_DATABASE_URL=sqlite+aiosqlite:///batcher.db

# =============================================================================
# LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
BATCHER_LOG_LEVEL=INFO

# Output logs in JSON format
BATCHER_LOG_JSON=false

# =============================================================================
# RETRY CONFIGURATION
# =============================================================================

# Maximum retry attempts for failed transactions
BATCHER_MAX_RETRIES=3

# Delay between retry attempts (seconds)
BATCHER_RETRY_DELAY_SECONDS=10


